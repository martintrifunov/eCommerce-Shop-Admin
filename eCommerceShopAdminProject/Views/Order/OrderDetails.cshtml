@model eCommerceShopAdminProject.Models.Order

<div class="container">
    <h3 class="text-center mt-5 mb-5">Order Details For: @Model.User.UserName</h3>

    <div class="row">
        @for (int i = 0; i < Model.Products.Count; i++)
            {
                var item = Model.Products.ElementAt(i).SelectedProduct;

                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-6">
                    <div class="card mb-5">
                        <img src="@item.Image" class="card-img-top" style="width: 100%; height: 25rem;">
                        <div class="card-body pt-0 px-0">
                            <div class="d-flex flex-row justify-content-between mb-0 px-3">
                                <h6 class="text-muted mt-1">STARTING AT</h6>
                                <h6>&dollar;@item.Price</h6>
                            </div>
                            <hr class="mt-2 mx-3">
                            <div class="d-flex flex-row justify-content-between px-3 pb-4">
                                <div class="d-flex flex-column"><h6 class="text-muted">RATING</h6></div>
                                <div class="d-flex flex-column">
                                    <h6 class="mb-0">
                                        @for (int j = 0; j < item.Rating; j++)
                                        {
                                            @:<i class="fa-solid fa-star"></i>
                                        }
                                    </h6>
                                    <small class="text-muted text-right">(@item.Rating/5)</small>
                                </div>
                            </div>
                            <div class="d-flex flex-row justify-content-between p-3 mid">
                                <div class="d-flex flex-column"><h6 class="text-muted mb-1">DESCRIPTION</h6><div class="d-flex flex-row"><small>@item.Description</small></div></div>
                            </div>
                        </div>
                    </div>
                </div>
        }
    </div>
</div>